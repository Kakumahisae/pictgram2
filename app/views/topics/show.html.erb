<!--写真投稿詳細-->
<div class="topic-index-wrapper">
  <div class="container">
  
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= @topic.user.name %>
            </h2>
            
            <p class="topic-text">
              <%= @topic.description %>
            </p>
            
            <%= image_tag @topic.image.url %>
            
            <%= link_to "削除", topic_path(@topic), method: :delete %>
            
          
              
          </div>
        </div>
      </div>
    
  </div>
</div>